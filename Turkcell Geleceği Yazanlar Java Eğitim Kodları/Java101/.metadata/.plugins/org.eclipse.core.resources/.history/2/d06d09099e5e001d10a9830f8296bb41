
public class Driver {
	public static boolean test() {
		System.out.println("Test çalıştırıldı.");
		return false;
	}
	
	public static void main(String[] args) {
		boolean b = false;
		System.out.println(b);
		System.out.println(!b);
		System.out.println(b & false);
		System.out.println(b | true);
		// Bunu çalşma mantığı soldaki değere bakım örneğin false sağ taraftaki değere baklmaksızın değer false çıkıyor.
		// Eger sol taraftaki değer true olsaydı sağ taftaki değerlere bakılıp işlem yapılacaktı.
		System.out.println(true && test());
		System.out.println(b && test());
		
		System.out.println(b || test());
		
		
	}
}
